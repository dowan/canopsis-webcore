{{#component-tooltip content="External links"}}
    <div class="btn-group">
        <button type="button" class="btn btn-xs btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false" {{action "loadLinks" this}}>
            <i class="fa fa-link"></i>
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu" style="right:0; left:auto">
            {{#each linkInformation in links}}
                <li>
                    <a target="_blank" {{bind-attr href=linkInformation.url}}>{{linkInformation.label}}</a>
                </li>
            {{/each}}
        </ul>
    </div>
{{/component-tooltip}}
